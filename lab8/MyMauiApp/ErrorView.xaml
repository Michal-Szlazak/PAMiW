<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyMauiApp.ErrorView"
             Title="Not Authenticated">
    <VerticalStackLayout Spacing="15" Padding="20">

        <Label Text="You are not authenticated for this action." FontSize="20" HorizontalOptions="Center" />

        <Label Text="Please choose one of the following options:" FontSize="16" HorizontalOptions="Center" />

        <Button Text="Return to Main Page" Command="{Binding ReturnCommand}" 
                HorizontalOptions="FillAndExpand"
                VerticalOptions="CenterAndExpand"
                Margin="0,10,0,0" />

    </VerticalStackLayout>
</ContentPage>
