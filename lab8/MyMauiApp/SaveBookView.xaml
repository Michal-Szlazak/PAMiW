<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyMauiApp.SaveBookView"
             Title="SaveBookView"
             BackgroundColor="DarkGray">
    <VerticalStackLayout>
        <Label 
            Text="Save book"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <StackLayout Padding="20">

            <Label Text="Book Details" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,0,0,20"/>
            <Label Text="Title:" FontSize="18" />
            <Entry Placeholder="Title" Text="{Binding Book.Title}" BackgroundColor="LightBlue"/>
            <Label Text="Author:" FontSize="18" />
            <Entry Placeholder="Author" Text="{Binding Book.Author}" BackgroundColor="LightBlue"/>
            <Label Text="Description:" FontSize="18" />
            <Entry Placeholder="Description" Text="{Binding Book.Description}" BackgroundColor="LightBlue"/>

            <Button Text="Save" Command="{Binding SaveCommand}" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" Margin="0,20,0,0"/>

        </StackLayout>

    </VerticalStackLayout>
</ContentPage>