<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyMauiApp.ShowDetailsView"
             Title="ShowDetailsView"
             BackgroundColor="DarkGrey">
    <VerticalStackLayout>
        <Label 
            Text="Book Details"
            FontSize="24"
            FontAttributes="Bold"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <StackLayout Padding="20">

            <Label Text="Title:" FontSize="18" />
            <Label Text="{Binding Book.Title}" FontSize="16" BackgroundColor="LightBlue"/>

            <Label Text="Author:" FontSize="18" Margin="0,10,0,0" />
            <Label Text="{Binding Book.Author}" FontSize="16" BackgroundColor="LightBlue"/>

            <Label Text="Description:" FontSize="18" Margin="0,10,0,0" />
            <Label Text="{Binding Book.Description}" FontSize="16" BackgroundColor="LightBlue"/>

            <Button Text="Go Back" Command="{Binding GoBackCommand}" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" Margin="0,20,0,0"/>
        </StackLayout>

    </VerticalStackLayout>
</ContentPage>